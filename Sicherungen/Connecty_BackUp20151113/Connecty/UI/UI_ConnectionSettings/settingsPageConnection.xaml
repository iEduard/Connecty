<Page x:Class="Connecty.settingsPageConnection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Connecty"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="settingsPageConnection">


    <Grid>

            <StackPanel HorizontalAlignment="Right">

                <StackPanel Orientation="Horizontal"
                    Margin="0,0,10,0">
                    <Label Content="Auswahl der Verbindung"></Label>
                    <ComboBox Name="connectionSelection"
                      Width="70"
                      SelectionChanged="connectionSelection_SelectionChanged"></ComboBox>
                </StackPanel>
                <Frame Name="settingsContentFrame" 
               Source="settingsPageTcpIp.xaml"
               NavigationUIVisibility="Hidden" IsTabStop="False" />
            </StackPanel>

    </Grid>
</Page>
