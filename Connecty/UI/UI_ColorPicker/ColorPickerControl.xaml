<UserControl x:Class="Connecty.CollorPickerControl"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Connecty"
             mc:Ignorable="d" 
             d:DesignWidth = "118" 
             d:DesignHeight="20">

    <StackPanel Orientation="Horizontal">

        <Button Name="btSendColor" Click="ColorSelect_Click">
            Gesendet
            <Button.Resources>
                <sys:Int32 x:Key="SendReciveSelection">1</sys:Int32>
            </Button.Resources>
        </Button>
        <Button Name="btReciveColor" Click="ColorSelect_Click" >
            Empfangen
            <Button.Resources>
                <sys:Int32 x:Key="SendReciveSelection">2</sys:Int32>
            </Button.Resources>
        </Button>
        
    </StackPanel>
</UserControl>
